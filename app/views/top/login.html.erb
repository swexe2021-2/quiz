<%= flash[:notice] %>

<%= form_tag top_login_path, method: :post do %>
  <p>
      <%= label_tag :uid, 'uid : ' %> 
      <%= text_field_tag :uid %> 
  </p>
  <p>
      <%= label_tag :pass, 'pass : ' %> 
      <%= password_field_tag :pass %> 
  </p>
  <p>
      <%= submit_tag 'ログイン' %>
  </p>
<% end %>

<p>
    <%= link_to '新規登録', new_user_path %>
</p>
<p>
    <%= link_to '戻る', :back %>
</p>
